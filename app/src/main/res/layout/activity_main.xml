<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:background="@drawable/bb"
    tools:context=".MainActivity">





    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btnChooser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/imm" />



        <View android:layout_width="100dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnVidActivity"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/nn"/>




    </TableRow>

    <TableRow
        android:layout_width="424dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="images"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fff"/>


        <View
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Video"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fff"/>


    </TableRow>





    <android.support.v7.widget.RecyclerView
        android:id="@+id/previewRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_filePath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_fileSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnCompress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/but"
        android:visibility="gone"
        android:text="compress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:layout_gravity="bottom|center"
        android:text="Pro-Image-video-Compressor"
        android:textStyle="bold"
        android:textColor="#fff"/>


    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" />


</LinearLayout>


