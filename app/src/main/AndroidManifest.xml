<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pro.image.video_compressor_hd"
    android:extractNativeLibs="false">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.pro.image.video_compressor_hd.spl">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.pro.image.video_compressor_hd.MainActivity">

        </activity>
        <activity
            android:name="com.pro.image.video_compressor_hd.CompressPicActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name="com.pro.image.video_compressor_hd.VideoActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name="com.pro.image.video_compressor_hd.services.CameraActionHandlerService"
            android:process=":compressService" />
        <service android:name="com.pro.image.video_compressor_hd.services.CompressService" />

        <receiver
            android:name="com.pro.image.video_compressor_hd.receivers.CameraActionReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.hardware.action.NEW_PICTURE" />
                <action android:name="android.hardware.action.NEW_VIDEO" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
                <data android:mimeType="video/*" />
            </intent-filter>
        </receiver>
    </application>

</manifest>